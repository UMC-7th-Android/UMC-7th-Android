<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 하루는 어땠나요?"
        android:fontFamily="@font/kkh"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>
    <TextView
        android:id="@+id/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감정우표를 선택해주세요"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/kkh"
        android:textStyle="bold"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:text="선택한 감정우표를 기반으로 맞춤형 질문이 배달됩니다"
        app:layout_constraintStart_toStartOf="@id/sub_title"
        app:layout_constraintEnd_toEndOf="@id/sub_title"
        app:layout_constraintTop_toBottomOf="@id/sub_title"
        android:layout_marginTop="14dp"
        />

    <ImageView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a"
        app:layout_constraintStart_toStartOf="@id/sub_title"
        app:layout_constraintEnd_toEndOf="@id/sub_title"
        app:layout_constraintTop_toBottomOf="@id/description"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/a_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:fontFamily="@font/kkh"
        android:text="더없이 행복한 하루였어요"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/a"
        app:layout_constraintStart_toStartOf="@id/a"
        app:layout_constraintEnd_toEndOf="@id/a"/>




    <ImageView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/b"
        app:layout_constraintStart_toStartOf="@id/a_d"
        app:layout_constraintEnd_toEndOf="@id/a_d"
        app:layout_constraintTop_toBottomOf="@id/a_d"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/b_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:fontFamily="@font/kkh"
        android:text="들뜨고 흥분돼요"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/b"
        app:layout_constraintStart_toStartOf="@id/b"
        app:layout_constraintEnd_toEndOf="@id/b"/>



    <ImageView
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_462_2"
        app:layout_constraintStart_toStartOf="@id/b_d"
        app:layout_constraintEnd_toEndOf="@id/b_d"
        app:layout_constraintTop_toBottomOf="@id/b_d"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/c_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:fontFamily="@font/kkh"
        android:text="평범한 하루였어요"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/c"
        app:layout_constraintStart_toStartOf="@id/c"
        app:layout_constraintEnd_toEndOf="@id/c"/>



    <ImageView
        android:id="@+id/d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_462_3"
        app:layout_constraintStart_toStartOf="@id/c_d"
        app:layout_constraintEnd_toEndOf="@id/c_d"
        app:layout_constraintTop_toBottomOf="@id/c_d"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/d_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:fontFamily="@font/kkh"
        android:text="생각이 많아지고 불안해요"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/d"
        app:layout_constraintStart_toStartOf="@id/d"
        app:layout_constraintEnd_toEndOf="@id/d"/>



    <ImageView
        android:id="@+id/e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_462_4"
        app:layout_constraintStart_toStartOf="@id/d_d"
        app:layout_constraintEnd_toEndOf="@id/d_d"
        app:layout_constraintTop_toBottomOf="@id/d_d"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/e_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:fontFamily="@font/kkh"
        android:text="부글부글 화가 나요"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/e"
        app:layout_constraintStart_toStartOf="@id/e"
        app:layout_constraintEnd_toEndOf="@id/e"/>

</androidx.constraintlayout.widget.ConstraintLayout>